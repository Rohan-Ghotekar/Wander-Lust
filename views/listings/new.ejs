<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2 mt-4">

    <h3>Create a New Listing</h3>
    <form action="/listings" method="post" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" placeholder="Enter Title" required>
            <div class="valid-feedback">
                Looks good Title!
            </div>
            <div class="invalid-feedback">
                Please enter a title.
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea type="text" name="listing[description]" id="" placeholder="Enter details" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please enter description
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="listing[image][url]" class="form-label">Image URL</label>
                <input type="text" name="listing[image][url]" id="" placeholder="Enter Image URL/LINK" class="form-control">
            </div>
            <div class="mb-3 col-md-4">
                <label for="listing[image][filename]" class="form-label">Image File Name</label>
                <input type="text" name="listing[image][filename]" id="" placeholder="Enter Image Name" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  name="listing[price]" id="" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">
                Please enter a price.
                </div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">
                Please enter a valid country name.
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" id="" placeholder="Mumbai,Maharashtra" class="form-control"required>
            <div class="invalid-feedback">
                Please enter a valid location.
            </div>
        </div>

        <button class="btn btn-dark offset-1 add-btn mt-3 mb-5" style="width: 80%;">Add</button>  
    </form>
</div>
</div>